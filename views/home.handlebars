<main>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Home</h1>
            </div>

            {{#each posts as |post|}} 
                <div class="posts">
                    <h2>{{post.title}}</h2>
                    <p>{{post.description}}</p>
                    <p>{{post.writer_name}}</p>
                    <p>{{post.date_created}}</p>
                </div>
            {{/each}}
        </div>
    </div>
</main>
